{
  "name": "otak-clipboard",
  "displayName": "otak-clipboard",
  "description": "This VSCode extension allows you to copy all files within a directory to your clipboard in just two clicks, or to copy only the currently opened tab. It's a convenient clipboard tool, optimized for automated workflows powered by generative AI.",
  "publisher": "odangoo",
  "license": "MIT",
  "icon": "./images/icon.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Otak Clipboard Configuration",
      "properties": {
        "otakClipboard.useGitignore": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "`.gitignore`の設定を考慮し、対象ファイルをクリップボードコピーから除外します。"
        }
      }
    },
    "commands": [
      {
        "command": "otakClipboard.copyCurrentTab",
        "title": "現在のタブをコピー"
      },
      {
        "command": "otakClipboard.copyAllOpenedTabs",
        "title": "開いているすべてのタブをコピー"
      },
      {
        "command": "otakClipboard.copyFile",
        "title": "ファイルをコピー"
      },
      {
        "command": "otakClipboard.copyFolder",
        "title": "フォルダ内コピー(直下の階層のみ)"
      },
      {
        "command": "otakClipboard.copyFolderRecursive",
        "title": "フォルダ内すべてコピー(再帰的)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "otakClipboard.copyFile",
          "when": "!explorerResourceIsFolder",
          "group": "navigation"
        },
        {
          "command": "otakClipboard.copyFolder",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        },
        {
          "command": "otakClipboard.copyFolderRecursive",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "otakClipboard.copyCurrentTab",
          "group": "navigation"
        },
        {
          "command": "otakClipboard.copyAllOpenedTabs",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "ignore": "^5.3.2"
  }
}
